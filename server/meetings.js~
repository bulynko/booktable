//Meteor.publish("meetings", function (options,searchString) {

Meteor.publish("meetings", function () {
  if (searchString == null) searchString = '';

  return Meetings.find({
 //   'name' : { '$regex' : '.*' + searchString || '' + '.*', '$options' : 'i' },
    $or:[
      {$and:[
        {"public": true},
        {"public": {$exists: true}}
      ]},
      {$and:[
        {uid: this.userId},
        {uid: {$exists: true}},
      ]}
    ]} );
});

